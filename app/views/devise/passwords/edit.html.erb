<div class="sans-head">
  <div class="login mx-auto">
    <h4 class=" mb-4">Changez votre mot de passe</h4>
    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
      <%= f.hidden_field :reset_password_token %>

      <div class="field form-group">
        <div class="form-content text-left">
          <%= f.label :password, "Nouveau mot de passe" %>
          <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class:'form-control form-width', placeholder:"6 caractÃ¨res minimum" %>
        </div>
      </div>

      <div class="field form-group">
        <div class="form-content text-left">
          <%= f.label :password_confirmation, "Confirmer le nouveau mot de passe" %>
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class:'form-control form-width', placeholder: "confirmer" %>
        </div>
      </div>

      <div class="actions mb-4">
        <%= f.submit "Changer mon mot de passe", class:'sc-eerKOB cfnPHQ' %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %> 
  </div>
</div>



