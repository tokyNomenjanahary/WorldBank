<div class="sans-head">
	<div class="login mx-auto">
		<h4 class="mb-3">Forgot your password?</h4>
		<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
		  <%= render "devise/shared/error_messages", resource: resource %>

		  <div class="field form-group">
		  	<div class="form-content text-left">
			    <%= f.label :email %>
			    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: "Adresse e-mail" %>
		  	</div>
		  </div>

		  <div class="actions mb-4">
		    <%= f.submit "Send me reset password instructions", class:'sc-eerKOB cfnPHQ' %>
		  </div>
		<% end %>

		<%= render "devise/shared/links" %>
	</div>
</div>
