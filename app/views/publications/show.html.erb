<div class="container sans-head" >
	<div class="titre">
	<h5><%=@pub.title%></h5>
   </div>
   <div>
		<div class="mt-3">
			<p class="text-muted mt-3 mb-3 text-justify"><%= raw @pub.description%></p>
			<%if @pub.files.attached?%>
				<h5>Liste des documents associ√©s :</h5>
				<ol class="ml-4">
					<%@pub.files.all.each do|file|%> 
						<li class="mb-3 mt-3"><%= link_to file.filename, rails_blob_path(file, disposition: "attachement"), class: "doc-relative ml-2 text-wrap text-break", target: :_blank%></li>
					<%end%>
				</ol>
			<%end%>
		</div>
	</div>
</div>
