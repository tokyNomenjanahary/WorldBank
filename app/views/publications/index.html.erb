<div class="sans-head mb-5">
	<div class="mb-4">
		<h3 style="color: dark; margin: 3%; text-align: center;" >Toutes les publications</h3>
		</div>
	<div class="row justify-content-center w-100">
		<% @pubs.each do |p|%>
			<div class="col-md-3 card mx-1 mb-2 position-relative">
				<div class="card-body">
					 	 	<div class="card-title">
						    <h5 class="primary-color"><%= p.title %></h5>
						    </div>
						<div class="card-text">
							<p class="card-text text-muted mb-5 truncate-pub"><%= p.description %></p>
						</div>
						<p class="mt-3 position-absolute more-info-pub"><a href="<%= publication_path(p.id)%>" class="table">Voir</a></p>
				</div>
			</div>
      <%end%>
	</div>
	<div class="text-center">
		<%= paginate @pubs %>
	</div>
</div>