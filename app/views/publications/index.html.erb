<div class="sans-head mb-5">
	<%if @pubs.count == 0 %>
			<div class="text-center text-muted mt-1 mb-4">
				<p> Aucune publication</p>
			</div>
		<%else%>
	<div class="mb-4 text-center">
		<h3 class="table">Toutes les publications</h3>
		</div>
	<div class="row justify-content-center">
		
		<% @pubs.each do |p|%>
			<div class="col-md-3 card mx-1 mb-2 position-relative">
				<div class="card-body">
					 	 	<div class="card-title">
						    <h5 class="primary-color"><%= p.title %></h5>
						    </div>
						<div class="card-text">
							<p class="card-text text-muted mb-5 truncate-pub"><%= p.description %></p>
						</div>
						<p class="mt-3 position-absolute more-info-pub"><a href="<%= publication_path(p.id)%>" class="table">Voir</a></p>
				</div>
			</div>
      <%end%>
	</div>
	<div class="text-center">
		<%= paginate @pubs %>
	</div>
<%end%>
</div>