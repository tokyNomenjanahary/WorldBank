<div class="container sans-head mb-5">
	<%if @actus.count == 0 %>
			<div class="text-center text-muted mt-1 mb-4">
				<p> Aucune actualité</p>
			</div>
		<%else%>
	<div class="mb-4 text-center">
		<h3 class="tablePrint">Toutes les actualités</h3>
	</div>
	<div class="row justify-content-center">
		<% @actus.each do |a|%>
			<div class="col-md-3 mb-2 card mx-1 position-relative">
				<div class="card-body">
			 	 	<div class="card-title tablePrint">
				    	<h6><%= a.date_publication%></h6>
				    </div>
					<div class="card-text">
						<p class="card-text text-muted mb-5 truncate-pub"><%= a.title %></p>
					</div>
				    <p class="mt-3 position-absolute more-info-pub"><a href="<%= actu_path(a.id)%>" class="tablePrint">Voir</a></p>
				</div>
			</div>
		<%end%>	
	</div>
	<div class="text-center">
		<%= paginate @actus %>
	</div>
<%end%>
</div>
