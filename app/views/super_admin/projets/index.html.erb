
<div class="container sans-head mb-2">
	<div class="text-center text-muted mt-4 mb-4 ">
		<h3 class="tablePrint"> Projets validés </h3>
	</div>
		<%if @projets_valides.count == 0 %>
			<div class="text-center text-muted mt-1 mb-4">
				<p> Aucun projet validé </p>
			</div>
		<%else%>	
	<div class="row">
			<% @projets_valides.each do |p|%>
			<div class="col-md-4 mb-3">
				<div class="card card-height position-relative">
					<div class="card-body">
						<h5 class="card-title"><%= p.nom_du_projet.truncate(40) %></h5>
						<p class="card-text"><%= raw truncate(sanitize(p.objectif_generale_du_projet, tags: []), length: 100)%></p>
						<div class="row align-items-center mt-2 position-absolute card-foot">
							<a href="<%= super_admin_projet_path(p.id)%>" class="col tablePrint mb-0">Voir</a>
						</div>	
					</div>
				</div>
			</div>
			<%end%>
		<%end%>	
	</div>
	<div class="text-center">
		<%= paginate @projets_valides %>
	</div>
</div>

