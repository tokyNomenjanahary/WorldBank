   <%= form_tag url_for(action: 'create'),method:'post', class:'form', multipart: true do%>
	
	<div class="container sans-head border rounded p-4">
		<h5 class="text-center">Créer taux de change</h5>
		<div class="mb-2">
			<label for="nom" class="table">Référence </label>
			<input type="text" name="reference" id="nom" placeholder="UAC/EURO/USD/MGA" class="form-control" required="true">
		</div>
		<div class="mb-2">
			<label for="nom" class="table">Valeur </label>
			<input type="text" name="valeur" id="nom" placeholder="1.2345" class="form-control" required="true">
		</div>
			<div class="mb-2 mt-4">
					<%= select_tag 'unite', options_for_select(Unite.all.order(:nom).collect{ |c| [c.nom, c.id] }), :include_blank => "choisir", class: "form-control"%>
			</div>
		<div>
			<input type="submit" name="cree" value="Créer" class="btn btn-bg-primary rounded-0 text-white btn-lg btn-block mt-3">
		</div>
	</div>

<%end%>
