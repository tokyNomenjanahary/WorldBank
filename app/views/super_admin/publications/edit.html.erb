<%= form_tag url_for(action: 'update'), method:'patch', class:'form', multipart: true do%>
	<div class="container sans-head border rounded p-4">
		<h5 class="text-center tablePrint">Modifier cette publication</h5>
		<div class="mb-2">
			<label for="nom" class="tablePrint">Titre </label>
			<input type="text" name="title" id="nom" placeholder="title" class="form-control" value="<%= @pub.title%>" required="true">
		</div>
		<div class="mb-2">
			<label for="nom" class="tablePrint">Description </label>
			<textarea type="text" name="description" id="nom" class="form-control p-2 editor" rows="5" required="true"><%= @pub.description%></textarea>
		</div>
		<div class="mb-2 mt-4">
			<%= file_field_tag :files, name: "files[]", multiple: true, id: :"document", class: 'toggleclass' %>	
			<span class="btn btn-secondary text-wrap text-break" id="simulateur">Modifier les fichiers liés à cette publication</span>	

		</div>
		<div class="mb-2 mt-4">
			<p>Documents associés</p>
			<%for i in 0..@pub.files.length-1%>
				<%= link_to @pub.files[i].filename, rails_blob_path(@pub.files[i], disposition: "attachement"), target: :_blank, style: :"text-decoration: none;color: white;margin-bottom: 10px;", id: :simulateur, class: :"sc-eerKOB cfnPHQ"%>
			<%end%>
		</div>
				
		<div>
			<input type="submit" name="cree" value="Publier" class="btn btn-bg-primary rounded-0 text-white btn-lg btn-block mt-4">
		</div>
	</div>
<%end%>
