<%= form_tag url_for(action: 'update'), method:'patch', class:'form', multipart: true do%>
	<div class="container sans-head border rounded p-4">
		<h5 class="text-center">Modifier cette publication</h5>
		<div class="mb-2">
			<label for="nom" class="table">Titre </label>
			<input type="text" name="title" id="nom" placeholder="title" class="form-control" value="<%= @pub.title%>" required="true">
		</div>
		<div class="mb-2">
			<label for="nom" class="table">Description </label>
			<textarea type="text" name="description" id="nom" class="form-control p-2" rows="5" required="true"><%= @pub.description%></textarea>
		</div>
		<div class="mb-2 mt-4">
			<%= file_field_tag :files, name: "files[]", multiple: true, id: :"document", class: 'toggleclass' %>	
			<span class="btn btn-secondary" id="simulateur">Modifier les fichiers liés à cette publication</span>	

		</div>
		<div class="mb-2 mt-4">
			<p>Documents associés</p>
			<%for i in 0..@pub.files.length-1%>
				<span class="sc-eerKOB cfnPHQ" id="simulateur" style="margin-bottom: 10px;"><%= @pub.files[i].blob.filename%></span>
			<%end%>
		</div>
				
		<div>
			<input type="submit" name="cree" value="Publier" class="btn btn-bg-primary rounded-0 text-white btn-lg btn-block mt-4">
		</div>
	</div>
<%end%>
