<%= form_tag url_for(action: 'create'),method:'post', class:'form', multipart: true do%>
	<div class="container sans-head publication-head border rounded p-4">
		<h5 class="text-center tablePrint">Créer votre publication</h5>
		<div class="mb-2">
			<label for="nom" class="tablePrint">Titre </label>
			<input type="text" name="title" id="nom" placeholder="title" class="form-control" required="true">
		</div>
		<div class="mb-2">
			<label for="nom" class="tablePrint">Description </label>
			<textarea type="text" name="description" id="nom"  class="form-control p-2 editor" required rows="5"></textarea>
		</div>
			<div class="mb-2 mt-4">
				<%= file_field_tag :files, name:"files[]", multiple: true, id: :"document", class: 'toggleclass'%>
				<span class="btn btn-secondary text-wrap text-break" id="simulateur">Joindre un fichier à cette publication</span>
			</div>
		<div>
			<input type="submit" name="cree" value="Publier" class="btn btn-bg-primary rounded-0 text-white btn-lg btn-block mt-4">
		</div>
	</div>
<%end%>

	<script src="https://cdn.tiny.cloud/1/cve25nsf1zx9vdlxydio4lplp7jghc6tstgpzq4xu394hmib/tinymce/5/tinymce.min.js" referrerpolicy="origin"></script>

	<script>
	  tinymce.init({
	    selector: 'textarea.editor',
	  	plugins: 'lists link',
	  	toolbar: 'bold italic | link code | aligncenter alignright alignjustify  | numlist bullist outdent indent',
	  	menubar: false,
	  	language : 'fr_FR'
		
     
	  });

	</script>
