<div class="sans-head">
	<%if @pubs.count == 0 %>
			<div class="text-center text-muted mt-1 mb-4">
				<p> Aucune publication</p>
			</div>
		<%else%>
	<div class="mb-4 text-center">
		<h3 class="tablePrint">Mes publications</h3>
		</div>
	<div class="mx-auto row justify-content-center pub-width">
		<% @pubs.each do |p|%>
			<div class="col-10 col-md-5 col-lg-4 col-xl-3 card mx-1 mb-2 position-relative">
				<div class="card-body">
					 	 	<div class="card-title">
						    <h5 class="primary-color"><%= p.title %></h5>
						    </div>
						<div class="card-text">
							<p class="card-text text-muted mb-2 truncate-pub">
								<div class="mt-2 mb-5">
								<%= raw truncate(sanitize(p.description, tags: []), length: 100) %></p>
								</div>
						</div>
						<p class="mt-3 position-absolute more-info-pub"><a href="<%= super_admin_publication_path(p.id)%>" class="tablePrint">Voir</a></p>
				</div>
			</div>
      <%end%>
	</div>
	<%end%>
</div>