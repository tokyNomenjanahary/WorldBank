		</div>
	<% else %>
	<table class="table table-bordered table-dark">
		<thead>
		<tr>
			<th scope="col">Id</th>
			<th scope="col">Email</th> 
			<th scope="col">Valider en tant que</th>
			<th scope="col">Valider en tant que</th>
			<th scope="col">Action </th>
		</tr>
		</thead>
		<tbody>
			<% @users_en_attente.each do |ba|%>
		<tr>
			<th scope="row"><%=ba.id%></th>
			<td><%=ba.email%></td>
			

			<%= form_for ba, url: super_admin_user_path(ba.id), method: :put do |f| %>
				<td><input type="submit" name="valider" value="Bailleur"></td>
				<td><input type="submit" name="valider" value="Consultant"></td>

			<%end%>
