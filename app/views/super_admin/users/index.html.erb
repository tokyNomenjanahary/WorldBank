<div class="container sans-head">
	<h4 class="tablePrint mb-2">Comptes validés</h4>
	<%if @users.count == 0%>
		<div class="text-center text-muted mt-4 mb-4">
			Aucun pour le moment
		</div>
	<% else %>
		<table class="table tablePrint table-bordered table-dark">
		<thead>
			<tr> 
			<th scope="col">Id</th>
			<th scope="col">Email</th>
			<th scope="col">
				<a href="<%= super_admin_contacts_path%>" class="tablePrint mb-0">Tous les messages<span class="badge badge-light ml-2"><%= Message.all.count%></span></a>
			</th>
			<th scope="col">Action</th>
			<th scope="col">Rôle</th>
			</tr>
		</thead>
		<tbody>
			<% @users.order(id: :desc).each do |b|%>
			<tr>
			<th scope="row"><%=b.id%></th>
			<td><%=b.email%></td>
			<td>Message <span class="badge badge-light ml-2"><%= b.messages.count%> </span></td>
			<td>
				<div class="d-flex justify-content-around">
					<a href="#" class="badge btn-bg-primary text-white" data-toggle="modal" data-target="#mod<%= b.id%>">Voir</a>
					<a href="<%= super_admin_user_path(b.id)%>" class="badge badge-danger" data-method="delete" data-confirm="Voulez-vous retirer cet utilisateur ?" >Retirer</a>
				</div>
			</td>
			<td>
				<%if b.is_admin == true%>
					<span>Bailleur</span>
				<%elsif b.is_consultant == true%>
					<span>Visiteur</span>
				<%end%>
				
			</td>
			<%end%>
		</tr>
		</tbody>
		</table>
	<%end%>
</div>

<%for x in 0..@users.length-1%>
<div class="modal fade" id="mod<%= @users["#{x}".to_i].id%>" tabindex="-1" role="dialog" aria-labelledby="exampleModalLongTitle" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLongTitle">Information de compte</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
                <p><span>Nom :</span>
		    	<%=@users["#{x}".to_i].first_name%></p>
		    <p><span>Prénom :</span>
		    	<%=@users["#{x}".to_i].last_name%></p>
		    <p><span>Email :</span>
		    	<%=@users["#{x}".to_i].email%></p>
		     <%if @users["#{x}".to_i].organisme%>
		    	<%if @users["#{x}".to_i].organisme.ptf != nil%>
		    		PTF : <%=@users["#{x}".to_i].organisme.ptf.title%></p>
		    	<%elsif @users["#{x}".to_i].organisme.iga != nil%>
		    		IGA : <%=@users["#{x}".to_i].organisme.iga.title%></p>
		    	
		    	<%else%>
		    		<p>Organisme : <%=@users["#{x}".to_i].organisme.nom%></p>
		    	<%end%>
		    <%end%>
		</p> 
        	<%if @users["#{x}".to_i].is_admin == true%>
		    	<span>Bailleur</span>
		    <% elsif  @users["#{x}".to_i].is_consultant == true%>
		    	<span>Visiteur</span>
		    <%else%>
				<%= form_for @users["#{x}".to_i], url: super_admin_user_path(@users["#{x}".to_i].id), method: :put do |f| %>
	 
					<p>Valider en tant que : <input type="submit" name="valider" value="Bailleur"> 
					 <input type="submit" name="valider" value="Visiteur"></p>
				<%end%>
			<%end%>
		</p>
      </div>
    </div>
  </div>
</div>
<%end%>

<div class="container text-c">
	<h4	class="tablePrint mb-2">Comptes en attente de validation</h4>
	<%if @users_en_attente.count == 0%>
		<div class="text-center text-muted mt-4 mb-4">
			Aucun pour le moment
		</div>
	<% else %>
		<div class="d-flex justify-content-center align-items-center table-dark tablePrint mb-0">
			<div class="col-1 text-center same">
				<p>Id</p>
			</div>
			<div class="col-4 text-center same">
				<p>Email</p>
			</div>
			<div class="col-4 text-center same">
				<div class="w-100 d-flex justify-content-around h-100 align-items-center"> 
					<p>Valider en tant que</p>
				</div>
			</div>
			<div class="col-3 text-center same">
				<p>Action</p>
			</div>
		</div>
		<% @users_en_attente.order(id: :desc).each do |u|%>
			<div class="d-flex justify-content-center align-items-center table-dark tablePrint mb-0">
				<div class="col-1 text-center same">
					<%=u.id%>
				</div>
				<div class="col-4 text-center same">
					<%=u.email%>
				</div>
				<div class="col-4 text-center same">
					<div class="w-100 d-flex justify-content-around h-100 align-items-center"> 
						<%= form_for u, url: super_admin_user_path(u.id), method: :put do |f| %>
							<%= f.submit 'Bailleur', name: 'valider', value: 'Bailleur', class: 'btn btn-success btn-bg-primary'%>
							<%= f.submit 'Consultant', name: 'valider', value: 'Visiteur', class: 'btn btn-primary'%>
						<%end%>
					</div>
				</div>
				<div class="col-3 text-center same">
					<div class="d-flex justify-content-around pt-4">
						<a href="#" class="badge btn-bg-primary text-white" data-toggle="modal" data-target="#mod<%= u.id%>">Voir</a>
						<a href="<%= super_admin_user_path(u.id)%>" class="badge badge-danger" data-method="delete" data-confirm="Voulez-vous retirer cet utilisateur ?" >Retirer</a>
					</div>
				</div>
			</div>
		<%end%>
	<% end %>
</div>

