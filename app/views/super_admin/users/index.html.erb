<div class="container sans-head">
	<h4	>Listes des comptes valid√©s</h4>
	<%if @users.count == 0%>
		<div class="text-center text-muted mt-4 mb-4">
			Aucun pour le moment
		</div>
	<% else %>
		<table class="table table-bordered table-dark">
		<thead>
			<tr>
			<th scope="col">Id</th>
			<th scope="col">Email</th>
			<th scope="col">Action</th>
			</tr>
		</thead>
		<tbody>
			<% @users.each do |b|%>
			<tr>
			<th scope="row"><%=b.id%></th>
			<td><%=b.email%></td>
			<td><a href="/super_admin/users/<%=b.id%>" class="btn btn-warning">Voir</a>
			<a href="/super_admin/users/<%=b.id%>" data-method= "delete" class="btn btn-danger" data-confirm="Voulez-vous retirer cet utilisateur ?">Retirer</a></td>
			<td>
				<%if b.is_admin == true%>
					<span class="btn btn-success">Bailleur</span>
				<%elsif b.is_consultant == true%>
					<span class="btn btn-primary">Consultant</span>
				<%end%>
				</tr>
				<%end%>
				
			</td>
		</tbody>
		</table>
	<% end %>
</div>
<div class="container">
	<h4>Listes de demandes en attente de validation</h4>
	<%if @users_en_attente.count == 0%>
		<div class="text-center text-muted mt-4 mb-4">
			Aucun pour le moment
		</div>
	<% else %>
	<table class="table table-bordered table-dark">
		<thead>
		<tr>
			<th scope="col">Id</th>
			<th scope="col">Email</th> 
			<th scope="col">Valider en tant que</th>
			<th scope="col">Valider en tant que</th>
			<th scope="col">Action </th>
		</tr>
		</thead>
		<tbody>
			<% @users_en_attente.each do |u|%>
		<tr>
			<th scope="row"><%=u.id%></th>
			<td><%=u.email%></td>
			<%= form_for u, url: super_admin_user_path(u.id), method: :put do |f| %>
				<td><%= f.submit 'Bailleur', name: 'valider', value: 'Bailleur'%></td>
				<td><%= f.submit 'Consultant', name: 'valider', value: 'Consultant'%></td>			
			<%end%>
			<td><a href="/super_admin/users/<%=u.id%>" class="btn btn-warning">Voir</a></td>
		</tr>
			<%end%>
		</tbody>
	</table>
<%end%>
</div>


