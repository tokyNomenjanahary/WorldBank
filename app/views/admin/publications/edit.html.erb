
<%= form_tag url_for(action: 'update'),method:'put', class:'form', multipart: true do%>

	<div class="container sans-head border rounded p-4">
		<h5 class="text-center">Modifier votre publication</h5>
		<div class="mb-2">
			<label for="nom" class="mr-2 tablePrint">Titre </label>
			<input type="text" name="title" id="nom" placeholder="titre" class="form-control" required="true" value="<%=@pub.title%>">
		</div>
		<div class="mb-2">
			<label for="nom" class="mr-2 tablePrint">Description </label>
			<textarea type="text" name="description" id="nom" placeholder="description" class="form-control p-2" rows="5" required="true"><%= raw @pub.description%></textarea>
		</div>

		<div class="mb-2 mt-4">
			<%= file_field_tag :files, name: "files[]", multiple: true, id: :"document", class: 'toggleclass' %>	
			<span class="btn btn-secondary" id="simulateur">Modifier les fichiers liés à cette publication</span>	

		</div>
		<div class="mb-2 mt-4">
			<p>Documents associés</p>
			<%for i in 0..@pub.files.length-1%>
				<span class="sc-eerKOB cfnPHQ" id="simulateur" style="margin-bottom: 10px;"><%= @pub.files[i].blob.filename%></span>
			<%end%>
		</div>	
		<div>
			<input type="submit" name="cree" value="Publier" class="sc-eerKOB cfnPHQ">
		</div>	
	</div>
<%end%>
