<div class="container sans-head" >
	<div class="titre">
		<p><span class="attr">Publié par  </span>: <%=@pub.user.email%> , <%=@pub.user.first_name%></p>
		<h5><%=@pub.title%></h5>

   </div>
   <div>
		<div class="mt-3">
			<p class="text-muted mt-3 mb-3 text-justify"><%= raw @pub.description%></p>
			<%if @pub.files.attached?%>
				<h5>Liste des documents associés :</h5>
				<ol class="ml-4">
					<%@pub.files.all.each do|file|%> 
						<li class="mb-3 mt-3"><%= link_to file.filename, rails_blob_path(file, disposition: "attachement"), class: "doc-relative ml-2 text-wrap text-break" %></li>
					<%end%>
				</ol>
			<%end%>
		</div>
	 	<div class="text-left mt-4">
	      <a href="<%=  edit_admin_publication_path(@pub.id)%>" class="sc-eerKOB cfnPHQ bold sear" >Modifier</a>
	      <a href="<%= admin_publication_path(@pub.id)%>" class="btn btn-danger"  data-method="delete" data-confirm="Voulez-vous supprimer cette publication?"> Supprimer</a>
	    </div>
	</div>
</div>
<%= render partial: "/super_admin/confirm.html.erb"%>

