<div class="objectif mx-auto my-3 row align-items-start">
  <div class="col-12 col-md-2">
    <%if @projet.ptf.image_url%>
      <img src="/<%= @projet.ptf.image_url%>">
    <%end%>
  </div>
  <div class="ml-4 col-12 col-md-9 mt-2">
