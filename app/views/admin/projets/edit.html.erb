<div class="mt-4 mb-4">
	<%= form_tag url_for(action: 'update'),method:'put', class:'form', multipart: true do%>
		<div class="container">
			<div class="row mb-2">
				<div class="col-6">
					<div>
						<label for="nom" class="mr-2 table">Nom du projet </label>
					</div>
					<input type="text" name="nom_du_projet" id="nom"  value="<%= @projet.nom_du_projet%>" class="form-control">
				</div>
			</div>
			<div class="d-flex justify-content-between mb-3">
				<div>
					<h6 class="table">PTF : <span> <%= @projet.ptf.title%></span> </h6>
					<%= select_tag 'ptf_id', options_for_select(Ptf.all.order(:title).collect{ |c| [c.title, c.id] }), :include_blank => "choisir", class: "form-control"%>
				</div>
				<div>
					<h6 class="table">Début</h6>
					<input type="date" name="debut_du_projet" value="<%= @projet.debut_du_projet%>" class="form-control">
				</div>
				<div>
					<h6 class="table">Fin</h6>
					<input type="date" name="fin" value="<%= @projet.fin%>" class="form-control">
				</div>
				<div>
					<h6 class="table">Montant</h6>
					<input name="montant" type = "range" min="0" max="100" onchange="rangevalue.value=value" value="<%=@projet.montant%>"/>
                  	<output id="rangevalue">50 Millions USD</output> 
				</div>
				<div>
					<h6 class="table">Appui<span> <%= @projet.appui.title%></span></h6>
					<%= select_tag 'appui_id', options_for_select(Appui.all.order(:title).collect{ |c| [c.title, c.id] }), :include_blank => "choisir", class: "form-control"%>
				</div>
			</div>
		</div>

		<div class="container mb-2">
			<a class="btn-col" data-toggle="collapse" href="#secteur" role="button" aria-expanded="false" aria-controls="collapseExample">
				Secteurs
			</a>
			<% @projet.secteurprojets.each do |s|%>
		        <p><%= s.secteur.title%></p>
		    <%end%>
				<div class="collapse" id="secteur">
				<div class="card card-body">
					<div class="row">
						<% Secteur.all.order(:title).each_with_index do |c,x| %>
							<div class="col-md-4">
								<% if @sects %> 
						 			<% if @sects.include? c %>
										<%= check_box_tag("secteur_#{x}",c.id) %>
									<%else%>
										<%= check_box_tag("secteur_#{x}",c.id) %>
									<%end%>
								<%end%>
								<%= c.title%>
							</div> 
						<% end %>
					</div>
				</div>
				</div>
			</div>

			<div class="container mb-2">
			<a class="btn-col" data-toggle="collapse" href="#filiere" role="button" aria-expanded="false" aria-controls="collapseExample">
				Filières
			</a>
			<% @projet.filiereprojets.each do |f|%>
			    <p><%= f.filiere.title%></p>
			<%end%>
				<div class="collapse" id="filiere">
				<div class="card card-body">
					<div class="row">
						<% Filiere.all.order(:title).each_with_index do |c,x| %>
							<div class="col-md-3">
								<% if @fils%>
							 		<% if @fils.include? c %>
										<%= check_box_tag("filiere_#{x}",c.id, checked: true) %>
									<%else%>
										<%= check_box_tag("filiere_#{x}",c.id) %>
									<%end%>
								<%end%>
								<%= c.title%>
							</div>
						<% end %>
					</div>
				</div>
				</div>
			</div>

			<div class="container mb-2">
				<a class="btn-col" data-toggle="collapse" href="#Beneficiaire" role="button" aria-expanded="false" aria-controls="collapseExample">
					Bénéficiaires
				</a>
				<% @projet.benefprojets.each do |b|%>
			        <p><%= b.beneficiaire.title%></p>
			    <%end%>
				<div class="collapse" id="Beneficiaire">
					<div class="card card-body">
						<div class="row">
							<% Beneficiaire.all.order(:title).each_with_index do |c,x| %>
								<div class="col-md-4">
									<% if @bens%>
							 			<% if @bens.include? c %>

							   			<%= check_box_tag("beneficiaire_#{x}",c.id, checked: true) %>
							   			<%else%>
							 				<%= check_box_tag("beneficiaire_#{x}",c.id) %>
							 			<%end%>
							 		<%end%>
							   		<%= c.title%> 
								</div>
							<% end %>
						</div>
					</div>
				</div>
			</div>

		<div class="container mb-2">
			<a class="btn-col" data-toggle="collapse" href="#iga" role="button" aria-expanded="false" aria-controls="collapseExample">
				IGA (Institution Gouvernementale Associée)
			</a>
				<% @projet.igaprojets.each do |i|%>
			    	<p><%= i.iga.title%></p>
			    <%end%>
			<div class="collapse" id="iga">
				<div class="card card-body">
					<div class="row">
						<% Iga.all.order(:title).each_with_index do |c,x| %>
							<div class="col-md-12">
								<% if @igas%>
							 		<% if @igas.include? c %>
										<%= check_box_tag("iga_#{x}",c.id, checked: true) %>

							 		<%else%>
							 			<%= check_box_tag("iga_#{x}",c.id) %>
							 		<%end%>
							 	<%end%>
							 	<%= c.title%>
							</div>
						<% end %>
					</div>
				</div>
			</div>
		</div>
		<div class="container mb-2">
			<a class="btn-col" data-toggle="collapse" href="#zi" role="button" aria-expanded="false" aria-controls="collapseExample">
				Régions
			</a>

			<% @projet.zoneprojets.each do |z|%>
			    <p><%= z.zone.title%></p>
			<%end%>
			<div class="collapse" id="zi">
				<div class="card card-body">
					<div class="row">
						<% Zone.all.order(:title).each_with_index do |c,x| %>
							<div class="col-md-4">
								<% if @zones%>
							 		<% if @zones.include? c %>
										<%= check_box_tag("zone_#{x}",c.id, checked: true) %>
									<%else%>
							 			<%= check_box_tag("zone_#{x}",c.id) %>
							 		<%end%>
							 	<%end%>
							 	<%= c.title%>
							</div>
						<% end %>
					</div>
				</div>
			</div>
		</div>
		<div class="container mb-2">
			<a class="btn-col" data-toggle="collapse" href="#objectif" role="button" aria-expanded="false" aria-controls="collapseExample">
				Objectif général du projet
			</a>
			 <%= raw @projet.objectif_generale_du_projet%>
			<div class="collapse" id="objectif">
				<div class="card card-body">
					<%=cktext_area_tag :objectif_generale_du_projet , "#{@projet.objectif_generale_du_projet}"%>
				</div>
			</div>
		</div>
		<div class="container mb-2">
			<a class="btn-col" data-toggle="collapse" href="#appui-specifique" role="button" aria-expanded="false" aria-controls="collapseExample">
				Appui spécifique au secteur privé
			</a>
			<p><%= raw @projet.aspsp%></p>
			<div class="collapse" id="appui-specifique">
				<div class="card card-body">
				<%=cktext_area_tag :aspsp, "#{@projet.aspsp}"%>
				</div>
			</div>
		</div>
		<div class="container mt-4">
			<input type="submit" value="Modifier" class="sc-eerKOB cfnPHQ">
		</div>
	<% end %>
</div>

