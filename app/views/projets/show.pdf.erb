<!DOCTYPE html>
<html>
<head>
  <title></title>
  <%= wicked_pdf_stylesheet_link_tag "application" %>
  <%= wicked_pdf_stylesheet_link_tag "bootstrap" %>
  </head>
</head>
<body>
    <header class="aci59a-0 eyAIuG sticky-limit">
    <div class="sc-1gnwgfb-2 hVIPFV picc position-relative">
      <div class="position-absolute entete">
        <h3 class="bg-fiche p-1 text-white"><%=@projet.nom_du_projet%></h3>
      </div>
    </div>
</header>
<div class="objectif mx-auto my-3 d-flex align-items-start">
  <div class="logoPtf">
    <%if @projet.ptf.image_url%>
      <%= wicked_pdf_image_tag "/#{@projet.ptf.image_url}" %>
    <%end%>
  </div>
  <div class="ml-4">
    <div>
      <div class="">
          <% if  @projet.secteurprojets.count > 0%>
            <%if  @projet.secteurprojets.count == 1%>
                <p><span class="attr">Secteur : </span>
            <%elsif @projet.secteurprojets.count > 1%>
                <p><span class="attr">Secteurs : </span>
            <%end%>
              <span class="word">
                <%@projet.secteurprojets .each do|sp|%>
                    <% if sp == @projet.secteurprojets.last%>
                      <%=sp.secteur.title %>
                    <% else %>
                      <%=sp.secteur.title %>, 
                    <% end %>
                <% end %>
              </span>
            </p>
          <%end%>
          
          <%if @projet.formeprojets.count > 0%>
            <% if @projet.formeprojets.count == 1%>
                <p><span class="attr">Forme d'appui : </span>
            <%elsif @projet.formeprojets.count > 1%>
                <p><span class="attr">Formes d'appui : </span>
            <%end%>
            <span class="word">
                <%@projet.formeprojets .each do|fop|%>
                  <% if fop == @projet.formeprojets.last%>
                    <%=fop.forme.title %>
                  <% else %>
                    <%=fop.forme.title %>, 
                  <% end %>
                <% end %>
              
            </span>
            </p>
          <%end%>

          <%if @projet.filiereprojets.count > 0%>
            <% if  @projet.filiereprojets.count == 1%>
                <p><span class="attr">Filière : </span>
            <%elsif @projet.filiereprojets.count > 1%>
                <p><span class="attr">Filières : </span>
            <%end%>
            <span class="word">
                <%@projet.filiereprojets .each do|fp|%>
                  <% if fp == @projet.filiereprojets.last%>
                    <%=fp.filiere.title %>
                  <% else %>
                    <%=fp.filiere.title %>, 
                  <% end %>
                <% end %>
            </span>
            </p>
          <%end%>
      </div>
    </div>
  </div>
</div>
  <div class="show-cont pt-4 pb-4">
    <div class="objectif mx-auto">
      <h2 class="text-left color">Objectif général du projet</h2>
      <div class="mt-2 pt-2">
        <%= raw @projet.objectif_generale_du_projet%>
      </div>
      <div class="appui mt-4">
        <h2 class="color text-left">Appui spécifique au secteur privé</h2>
        <div class="mt-2 p-2">
          <%= raw @projet.aspsp%>
        </div>
      </div>
      <div class="pt-4 pb-4">
        <div class="col-md-6 list">
          <% if  @projet.igaprojets.count > 0%>
            <% if  @projet.igaprojets.count == 1%>
                <p><span class="attr">Institution Gouvernementale Associée : </span></p>
            <%elsif @projet.igaprojets.count > 1%>
                <p><span class="attr">Institutions Gouvernementales Associées : </span></p>
            <%end%>
            <div class="mb-3">
                <%@projet.igaprojets.each do|g|%>
                    <%if g == @projet.igaprojets.last%>
                      <span><%=g.iga.title %></span>
                    <% else %>
                      <span><%=g.iga.title %>, </span>
                    <% end %>
                <% end %>
            </div>
          <%end%>

          <% if  @projet.zoneprojets.count > 0%>
            <% if  @projet.zoneprojets.count == 1%>
                <p><span class="attr">Région : </span></p>
            <%elsif @projet.zoneprojets.count > 1%>
                <p><span class="attr">Régions : </span></p>
            <%end%>
            <div class="mb-3">
                <%@projet.zoneprojets .each do|zp|%>
                  <% if zp == @projet.zoneprojets.last%>
                    <span><%=zp.zone.title %></span>
                  <%else%>
                    <span><%=zp.zone.title %>, </span>
                  <% end %>
                <% end %>
            </div>
          <%end%>
          
          <% if  @projet.partenaireprojets.count > 0%>
            <% if  @projet.partenaireprojets.count == 1%>
                <p><span class="attr">Partenaire d'implémentation : </span></p>
            <%elsif @projet.partenaireprojets.count > 1%>
                <p><span class="attr">Partenaires d'implémentations : </span></p>
            <%end%>
            <div class="mb-3">
                <%@projet.partenaireprojets .each do|pap|%>
                  <% if pap == @projet.partenaireprojets.last%>
                    <span><%=pap.partenaire.description %></span>
                  <%else%>
                    <span><%=pap.partenaire.description %>, </span>
                  <% end %>
                <% end %>
            </div>
          <%end%>


          <% if  @projet.benefprojets.count > 0%>
            <% if  @projet.benefprojets.count == 1%>
                <p><span class="attr">Bénéficiaire : </span></p>
            <%elsif @projet.benefprojets.count > 1%>
                <p><span class="attr">Bénéficiaires : </span></p>
            <%end%>
            <div class="mb-3">
                <%@projet.benefprojets .each do|ben|%>
                    <%if ben == @projet.benefprojets.last%>
                      <span><%=ben.beneficiaire.title %></span>
                    <% else %>
                      <span><%=ben.beneficiaire.title %>, </span>
                    <% end %>
                <% end %>
            </div>
          <%end%>

          <% if  @projet.secteurprojets.count > 0%>
          <%if  @projet.secteurprojets.count == 1%>
              <p><span class="attr">Montant  pour le secteur : </span>
          <%elsif @projet.secteurprojets.count > 1%>
              <p><span class="attr">Montant  pour les secteurs : </span>
          <%end%>
          <% @projet.montants.each do |m|%>
                <p class="mb-3"><%= m.secteur.title.titleize%> | <%=  number_with_delimiter(m.price) %> | <%= m.unite.nom%></p>
          <%end%>
          </p>
          <%end%>
          
        </div>
        <div class="col-md-6 list">
          <p class="mb-3"><span class="attr">Nature de l'appui : </span><%=@projet.appui.title%></p>
          <%if @projet.debut_du_projet && @projet.fin%>
            <p class="mb-3"><span class="attr">Début : </span><%=@projet.debut_du_projet.year%> &nbsp;&nbsp;&nbsp;&nbsp;
            <span class="attr">Fin : </span><%=@projet.fin.year%></p>
          <%end%>
          <%if @projet.pemprojets.count >= 1%>
          <p><span class="attr">Alignement aux priorités du plan Emergence de Madagascar : </span></p>
            <div class="mb-3">
              <% @projet.pemprojets.each do |p|%>
                  <p><%=p.pem.title%></p>
              <%end%>
            </div>
          <%end%>
          
          <%if @projet.siteweb == " "%>
            <p class="mb-3"><span class="attr">Site web : </span>
                <span class="word">
                  <a href="https://<%= @projet.siteweb.remove('https://')%>"><%= @projet.siteweb%></a>
                </span>
            </p>
          <%end%>

          <%if @projet.files.attached?%>
            <p><span class="attr">Fichiers : </span>
            <%@projet.files.each do|file|%> 
              <%= link_to file.filename, rails_blob_path(file, disposition: "attachement") %></p>
            <%end%>
        <%end%>
       
        </div>
    </div>
</body>
</html>
